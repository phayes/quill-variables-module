{
  "name": "quill-variables-module",
  "version": "1.0.0",
  "description": "A Quill.js module for inserting variables with a dropdown picker",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc && copyfiles -u 1 src/variables.css dist/",
    "dev": "tsc --watch & copyfiles -u 1 src/variables.css dist/ --watch",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "quill",
    "editor",
    "variable",
    "picker",
    "dropdown",
    "typescript"
  ],
  "author": "OpticalGym",
  "license": "MIT",
  "peerDependencies": {
    "quill": "^2.0.0"
  },
  "devDependencies": {
    "@types/quill": "^2.0.10",
    "copyfiles": "^2.4.1",
    "typescript": "^4.5.5"
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "example.html"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/opticalgym/quill-variables-module.git"
  },
  "bugs": {
    "url": "https://github.com/opticalgym/quill-variables-module/issues"
  },
  "homepage": "https://github.com/opticalgym/quill-variables-module#readme"
}
